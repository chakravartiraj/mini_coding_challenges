# Gemfile for Fastlane
source "https://rubygems.org"

gem "fastlane", "~> 2.220"

# Plugins for enhanced functionality
gem "fastlane-plugin-flutter_version", "~> 1.1"
gem "fastlane-plugin-firebase_app_distribution", "~> 0.7"
gem "fastlane-plugin-slack", "~> 1.7"
gem "fastlane-plugin-changelog", "~> 0.16"
gem "fastlane-plugin-semantic_release", "~> 1.4"

# Platform-specific gems
gem "cocoapods", "~> 1.12" # For iOS
gem "bundler", "~> 2.4"

# Code signing and deployment
gem "match", "~> 2.220" # For iOS code signing
gem "pilot", "~> 2.220" # For TestFlight uploads
gem "supply", "~> 2.220" # For Google Play uploads

# Quality and testing
gem "trainer", "~> 0.9" # For test result formatting
gem "danger", "~> 9.4" # For automated code review
